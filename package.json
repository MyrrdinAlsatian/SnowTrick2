{
    "name": "SnowTrick",
    "version": "0.0.0",
    "description": "Simple repo contenant le stric minimum pour bien commencer un projet",
    "repository": "https://github.com/MyrrdinAlsatian/BasicStarter.git",
    "author": "Myrrdin <stephan.jeanba@gmail.com>",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@babel/core": "^7.17.0",
        "@babel/preset-env": "^7.16.0",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@commitlint/cz-commitlint": "^17.0.3",
        "@hotwired/stimulus": "^3.0.0",
        "@symfony/stimulus-bridge": "^3.2.0",
        "@symfony/webpack-encore": "^4.0.0",
        "commitizen": "^4.2.4",
        "commitlint-config-cz": "^0.13.3",
        "core-js": "^3.23.0",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^6.7.0",
        "husky": "^8.0.1",
        "jquery": "^3.6.1",
        "lint-staged": "^13.0.3",
        "regenerator-runtime": "^0.13.9",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-notifier": "^1.15.0"
    },
    "scripts": {
        "dev-server": "encore dev-server",
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production --progress",
        "prepare": "husky install && npm install --global commitizen"
    },
    "engines": {
        "yarn": "^1.22.0",
        "npm": "please-use-yarn"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            ""
        ],
        "*.{html,js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": " npx cz --hook || true",
            "pre-commit": "lint-staged && npx --no-install git-precommit-checks",
            "commit-msg": "npx --no-install commitlint --edit $1"
        }
    },
    "git-precommit-checks": {
        "display": {
            "notifications": true,
            "offendingContent": true,
            "rulesSummary": true,
            "shortStats": true,
            "verbose": true
        },
        "rules": [
            {
                "filter": "\\.js$",
                "message": "'ðŸ¤” Hum ! Nâ€™as-tu pas oubliÃ© de retirer un console.log(â€¦) ?'",
                "regex": "console\\.log"
            },
            {
                "message": "Il reste des marqueurs de conflict",
                "regex": "/^[<>|=]{4,}/m"
            },
            {
                "filter": "^package\\.json$",
                "message": "Il te reste des choses Ã  faire (FIXME|TODO)",
                "regex": "(?:FIXME|TODO)"
            },
            {
                "message": "Bah alors ont fait des 'if (true)' ?",
                "regex": "/if\\s+\\(?(?:.*\\|\\|\\s*)?true\\)?/"
            }
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.js"
        }
    },
    "dependencies": {
        "@glidejs/glide": "^3.6.0",
        "sass": "^1.55.0",
        "sass-loader": "^13.0.0"
    }
}
